%h2 Submit New Item

= form_for @item, :url=>"/submit/create" do |f|
  -if @item.errors.any?
    #error_explanation
      %h2= "#{pluralize(@item.errors.count, "error")} prohibited this item from being saved:"
      %ul
        - @item.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    = f.text_field :name, :value=>@name
  .field
    = f.label :url
    = f.text_field :url, :value=>@url
  .field
    = f.label :list
    = collection_select(:list, :list_id, List.alphabetically, :id, :name, {:prompt => true})
  .actions
    = f.submit 'Save', :class=>'btn btn-primary'