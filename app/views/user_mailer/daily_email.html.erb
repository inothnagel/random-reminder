<h1>One random item from each of your lists:</h1>

<% @user.lists.each do |list| %>
  <p style="font-size: 16px;">
    <span style="font-weight: bold;"><%= list.name %></span>:
    <br />
    <% random_item = list.random_item %>
    <%= random_item.name %>
    <% if random_item.note %>
      <br />
      <%= random_item.note %>
    <% end %>
  </p>
<% end %>