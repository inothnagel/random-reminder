%h2= @list.name

%h3 Items
%table{:class=>"table"}
  - @list.items.each do |item|
    %tr
      %td= item.name
      %td= link_to 'Show', item, :class=>'btn'
      %td= link_to 'Edit', edit_item_path(item), :class=>'btn'
      %td= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete, :class=>'btn'

= form_for @new_item do |f|
  = f.text_field :name, :placeholder=>"Add new item..."
  = f.hidden_field :list_id, :value=>@list.id


%br
%br
= link_to 'Edit List', edit_list_path(@list), :class=>'btn'
= link_to 'Back', lists_path, :class=>'btn'