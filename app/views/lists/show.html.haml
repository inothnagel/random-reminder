%h2= @list.name

%h3 Items

= form_for @new_item do |f|
  = f.text_field :name, :placeholder=>"Add new item...", :id=>"new-item-input"
  = f.hidden_field :list_id, :value=>@list.id

%table{:class=>"table"}
  - @list.items.each do |item|
    %tr
      %td= link_to item.name, item

%br
%br
= link_to 'Edit List', edit_list_path(@list), :class=>'btn'
= link_to 'Destroy List', @list, :confirm => 'Are you sure?', :method => :delete, :class=>'btn'
= link_to 'Back', lists_path, :class=>'btn'