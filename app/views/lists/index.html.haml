%h2 My Lists

%table{:class=>"table"}
  - @lists.each do |list|
    %tr
      %td= list.name
      %td= link_to 'Show', list, :class=>'btn'
      %td= link_to 'Edit', edit_list_path(list), :class=>'btn'
      %td= link_to 'Destroy', list, :confirm => 'Are you sure?', :method => :delete, :class=>'btn'

= link_to 'New List', new_list_path, :class => 'btn btn-primary'